# =============================================================================
# Variables de entorno para desarrollo local
# =============================================================================

# AWS Configuration for LocalStack
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_REGION=us-east-1

# LocalStack endpoint
LOCALSTACK_ENDPOINT=http://localhost:4566

# DynamoDB Configuration (LocalStack)
DYNAMODB_ENDPOINT=http://localhost:4566
DYNAMODB_TABLE_NAME=appointments

# SNS Configuration
SNS_TOPIC_ARN=arn:aws:sns:us-east-1:000000000000:appointments-topic

# EventBridge Configuration
EVENTBRIDGE_BUS_NAME=appointments-bus

# SQS Configuration
SQS_PE_QUEUE_URL=http://localhost:4566/000000000000/appointments-pe-queue
SQS_CL_QUEUE_URL=http://localhost:4566/000000000000/appointments-cl-queue
SQS_CONFIRMATION_QUEUE_URL=http://localhost:4566/000000000000/appointments-confirmation-queue

# RDS MySQL Configuration - Peru (Docker)
RDS_PE_HOST=localhost
RDS_PE_PORT=3306
RDS_PE_DATABASE=medical_appointments_pe
RDS_PE_USERNAME=admin
RDS_PE_PASSWORD=password

# RDS MySQL Configuration - Chile (Docker)
RDS_CL_HOST=localhost
RDS_CL_PORT=3306
RDS_CL_DATABASE=medical_appointments_cl
RDS_CL_USERNAME=admin
RDS_CL_PASSWORD=password

# Application Configuration
STAGE=local
PORT=3000
API_PREFIX=api/v1

# API Keys (comma separated for multiple)
API_KEYS=test-api-key
